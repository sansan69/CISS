rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'employees' collection
    match /employees/{employeeId} {
      
      // READ Rules:
      // Allow a user to read their own document if they are authenticated via phone.
      // Allow an authenticated admin to read any document.
      allow get: if (request.auth != null && request.auth.token.phone_number == resource.data.phoneNumber) || 
                   (request.auth != null && request.auth.token.email != null);
                   
      // LIST Rule:
      // Only allow authenticated admins to list/query the collection.
      // This is crucial for the main employee directory view.
      allow list: if request.auth != null && request.auth.token.email != null;

      // CREATE Rule:
      // Allow anyone to create a new employee document for public enrollment.
      // Data validation should be handled in the application logic before submission.
      allow create: if true;

      // UPDATE Rule:
      // Allow updates if the user is an admin OR if the user is updating their own
      // document, verified by matching the phone number.
      allow update: if (request.auth != null && request.auth.token.email != null) ||
                      (request.auth != null && request.auth.token.phone_number == resource.data.phoneNumber);
      
      // DELETE Rule:
      // Only allow authenticated admins to delete employee records.
      allow delete: if request.auth != null && request.auth.token.email != null;
    }

    // Rules for the 'clients' collection
    match /clients/{clientId} {

      // Allow anyone to read the list of clients for dropdowns.
      allow read: if true;

      // Only allow authenticated admins to add, update, or delete clients.
      allow create, update, delete: if request.auth != null && request.auth.token.email != null;
    }
  }
}
