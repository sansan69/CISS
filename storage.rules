rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Employee document paths
    match /employees/{phoneNumber}/{documentType}/{fileName} {
      
      // Allow unauthenticated users (public enrollment, profile uploads) to create files under specific conditions.
      allow create: if 
        // 1. Ensure the upload path is one of the allowed document types.
        documentType in ['profilePictures', 'idProofs', 'addressProofs', 'signatures', 'bankDocuments', 'policeCertificates'] &&
        
        // 2. Enforce a maximum file size (e.g., 5MB) to prevent abuse.
        request.resource.size < 5 * 1024 * 1024 &&
        
        // 3. Validate content type to ensure only expected files are uploaded.
        (request.resource.contentType.matches('image/.*') || request.resource.contentType == 'application/pdf');

      // Allow authenticated users (admins) to read, update, or delete any file.
      // This is necessary for viewing profiles and for replacing/deleting documents.
      allow read, update, delete: if request.auth != null;
    }

    // Default deny all other reads/writes to bucket paths.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
