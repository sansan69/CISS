rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // TEMPORARY: Allow all reads and writes for any file in the employees folder.
    // This is to unblock the public registration flow.
    // This is NOT secure for production.
    match /employees/{allPaths=**} {
      allow read, write: if true;
    }

    // Default Deny Rule
    // This is a catch-all that explicitly denies access to any other path.
    match /{path=**} {
       allow read, write: if false;
    }
  }
}
